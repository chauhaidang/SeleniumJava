<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="DataDriven Testing">
    <listeners>
        <listener class-name="lucy_data_driven_test.listeners.CustomListeners"></listener>
<!--        one more listener from ReportNG to generate more html report-->
        <listener class-name="org.uncommons.reportng.HTMLReporter"></listener>
    </listeners>

    <test name="Bank Manager Login Test">
        <classes>
            <class name="lucy_data_driven_test.testcases.BankManagerLoginTest"></class>
        </classes>
    </test>

    <test name="Add Customer Test">
        <classes>
            <class name="lucy_data_driven_test.testcases.AddCustomerTest"></class>
        </classes>
    </test>

    <test name="Open Account Test">
        <classes>
            <class name="lucy_data_driven_test.testcases.OpenAccountTest"></class>
        </classes>
    </test>

</suite> <!-- Suite -->
